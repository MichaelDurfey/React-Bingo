{
    "extends": "airbnb",
    "rules": { 
        "no-plusplus": "warn",
        "import/no-extraneous-dependencies": "off"
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    }
}